<section>
<article>
<header>
<h1>Sign Up:</h1>
</header>
	
<%= form_for @message do |f| %> 
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.time_select :time %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </p>
  <p><%= f.submit %></p>
<% end %>

</article>
</section>